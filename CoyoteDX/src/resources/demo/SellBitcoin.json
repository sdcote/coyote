{
	"Class": "coyote.dx.Job",
	"Job": {
		"Name": "SellBitCoin",
		"Description": "Simple job run by RunJob.json to illustrate conditional job runs.",
		"PreProcess": {
			"LogEntry": {
				"message": "SELLING BITCOINS at [#$DateTime#]",
				"category": "notice"
			}
		},
		"Reader": {
			"Class": "StaticReader",
			"fields": {
				"Coins": "[#$Coins#]",
				"Cost": "[#$Cost#]",
				"Account": "[#$Account#]"
			}
		},
		"Transform": {
			"Replace": {
				"field": "short_description",
				"target": "\n",
				"value": " "
			},
			"Replace": {
				"field": "short_description",
				"pattern": "\r|\t",
				"value": ""
			},
			"Replace": {
				"field": "short_description",
				"target": "  ",
				"value": " "
			}
		},
		"Writer": {
			"LogEntry": {
				"message": "SOLD BITCOINS at [#$DateTime#]",
				"category": "notice"
			}
		}
	}
}
